#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/outputs.h>

/* Uncomment this block if using RGB
&led_strip {
    chain-length = <6>;
    // chain-length = <35>; // Uncomment if using both per-key and underglow LEDs
    // chain-length = <29>; // Uncomment if using only per-key LEDs.
};
 */

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// | EQUAL |  1  |  2  |  3   |  4      |  5         |                      |  6   |  7    |  8    |  9   |   0   |   +   |
// |  TAB  |  Q  |  W  |  E   |  R      |  T         |                      |  Y   |  U    |  I    |  O   |   P   |   Å   |
// |  ESC  |  A  |  S  |  D   |  F      |  G         |                      |  H   |  J    |  K    |  L   |   Ö   |   Ä   |
// | SHIFT |  Z  |  X  |  C   |  V      |  B         |           |  |       |  N   |  M    |  ,    |  .   |   -   | SHIFT |
//               |     | ALT  | GUI/NUM | LCTRL/RET  |  BSPC/NAV |  | SPACE | DEL  | RALT  |       |      |
            bindings = <
&kp EQUAL      &kp N1     &kp N2    &kp N3   &kp N4         &kp N5                                      &kp N6   &kp N7   &kp N8     &kp N9   &kp N0    &kp MINUS
&kp TAB        &kp Q      &kp W     &kp E    &kp R          &kp T                                       &kp Y    &kp U    &kp I      &kp O    &kp P     &kp LBKT
&kp ESC        &kp A      &kp S     &kp D    &kp F          &kp G                                       &kp H    &kp J    &kp K      &kp L    &kp SEMI  &kp SQT
&kp LSHFT      &kp Z      &kp X     &kp C    &kp V          &kp B         &trans             &trans     &kp N    &kp M    &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                          &trans    &kp LALT &lt 2 LGUI     &mt LCTRL RET &lt 1 BSPC         &kp SPACE  &kp DEL  &kp RALT &trans     &trans 
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {
// ------------------------------------------------------------------------------------------------------------
// | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
// | RBKT  |  /  |  7  |  8   |  9   |  *   |                   |      |       |       |      |       |       |
// | NUHS  |  -  |  4  |  5   |  6   |  0   |                   |      |       |       |      |       |       |
// |       |  +  |  1  |  2   |  3   |  .   |        |  |       |      |       |       |      |       |       |
//               |     |      |      |      |        |  |       |      |       |       |      |
            bindings = <
&bt BT_CLR &bt BT_SEL 0     &bt BT_SEL 1      &bt BT_SEL 2      &bt BT_SEL 3 &bt BT_SEL 4                    &trans    &trans    &trans    &trans    &trans    &trans
&kp RBKT   &kp KP_DIVIDE    &kp N7            &kp N8            &kp N9       &kp KP_MULTIPLY                 &trans    &trans    &trans    &trans    &trans    &trans
&kp NUHS   &kp KP_MINUS     &kp N4            &kp N5            &kp N6       &kp N0                          &trans    &trans    &trans    &trans    &trans    &trans
&trans     &kp KP_PLUS      &kp N1            &kp N2            &kp N3       &kp KP_DOT   &trans   &trans    &trans    &trans    &trans    &trans    &trans    &trans
                            &trans            &trans            &trans       &trans       &trans   &trans    &trans    &trans    &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
// | USB/BT | EP_ON | EP_OFF | EP_TOG |      |      |                   |      |       |       |      |       |       |
// |  GRAVE | RETUR |  HOME  |  ^     | END  | PGUP |                   |      |       |       |      |       |       |
// |        | DEL   |   <-   |   v    |  ->  | PGDN |                   |      |       |       |      |       |       |
// |        | SPACE |        |        |      |      |        |  |       |      |       |       |      |       |       |
//                  |        |        |      |      |        |  |       |      |       |       |      |
            bindings = <
&out OUT_TOG &ext_power EP_ON &ext_power EP_OFF &ext_power EP_TOG  &trans    &trans                          &trans      &trans    &trans    &trans   &trans    &trans
&kp GRAVE    &kp RET          &kp HOME          &kp UP             &kp END   &kp PG_UP                       &trans      &trans    &trans    &trans   &trans    &trans
&trans       &kp DEL          &kp LEFT          &kp DOWN           &kp RIGHT &kp PG_DN                       &trans      &trans    &trans    &trans   &trans    &trans
&trans       &kp SPACE        &trans            &trans             &trans    &trans    &trans        &trans  &trans      &trans    &trans    &trans   &trans    &trans
                              &trans            &trans             &trans    &trans    &trans        &trans  &trans      &trans    &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
